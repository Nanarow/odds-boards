<%# locals: (comment: Comment) %>
<div class="flex px-4 py-1 gap-2">
  <%= render 'components/ui/avatar', avatar: comment.commenter.avatar %>
  <div>
    <div class="flex flex-col gap-1 border border-base-300 p-2 rounded-box">
      <div class="flex items-center gap-2">
        @<%= comment.commenter.username %>
        &CenterDot;
        <%= time_ago_in_words(comment.created_at) %> ago
      </div>
      <p>
        <%= comment.body %>
      </p>
    </div>
    reply
  </div>
</div>
<div class="pl-8">
  <%= render 'comments/comments', comments: comment.replies %>
</div>
