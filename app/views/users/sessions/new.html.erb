<div class="card shadow-md w-96 border border-gray-300">
  <div class="card-body items-center">
    <figure>
      <%= image_tag "logo.png", class: "h-24" %>
    </figure>
    <h2>Log in</h2>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "w-full flex flex-col gap-2" }) do |f| %>
      <fieldset class="fieldset">
        <%= f.label :identifier, "Username or Email", class: "label" %>
        <%= f.text_field :identifier, autofocus: true, autocomplete: "username", class: "input w-full", required: true, data: { testid: "email" } %>
      </fieldset>
      <fieldset class="fieldset">
        <%= f.label :password, class: "label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "input w-full", required: true, data: { testid: "password" } %>
      </fieldset>
      <% if devise_mapping.rememberable? %>
        <fieldset class="fieldset flex items-center">
          <%= f.check_box :remember_me, class: "checkbox" %>
          <%= f.label :remember_me, class: "label grow" %>
          <%- if devise_mapping.recoverable? %>
            <%= link_to "Forgot your password?", new_password_path(resource_name) %>
          <% end %>
        </fieldset>
      <% end %>
      <%= f.submit "Log in", class: "btn w-full btn-primary", data: { testid: 'sign-in-button'} %>
    <% end %>
    <div class="flex justify-between">
      <%- if devise_mapping.registerable? %>
        <p>Don't have an account?&nbsp;&nbsp;</p>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "link" %>
      <% end %>
    </div>
  </div>
</div>