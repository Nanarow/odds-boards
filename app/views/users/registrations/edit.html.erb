<div class="flex flex-col items-center">
  <h2>Profile</h2>
  <p>Update your profile information</p>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
    <div class="avatar">
      <div class="w-24 rounded-full">
        <% if resource.avatar.attached? %>
          <%= image_tag resource.avatar %>
        <% else %>
          <%= image_tag "https://img.daisyui.com/images/stock/photo-1534528741775-53994a69daeb.webp" %>
        <% end %>
      </div>
    </div>
    <fieldset class="fieldset">
      <%= f.label :email, class: "label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
    </fieldset>
    <fieldset class="fieldset">
      <%= f.label :username, class: "label" %>
      <%= f.text_field :username, autocomplete: "username", class: "input" %>
    </fieldset>
    <fieldset class="fieldset">
      <%= f.label :first_name, class: "label" %>
      <%= f.text_field :first_name, class: "input" %>
    </fieldset>
    <fieldset class="fieldset">
      <%= f.label :last_name, class: "label" %>
      <%= f.text_field :last_name, class: "input" %>
    </fieldset>
    <fieldset class="fieldset">
      <%= f.label :bio, class: "label" %>
      <%= f.text_area :bio, class: "textarea" %>
    </fieldset>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>
    <fieldset class="fieldset">
      <%= f.label :password, class: "label" %>
      <i>(leave blank if you don't want to change it)</i>
      <%= f.password_field :password, autocomplete: "new-password", class: "input" %>
      <% if @minimum_password_length %>
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </fieldset>
    <fieldset class="fieldset">
      <%= f.label :password_confirmation, class: "label" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input" %>
    </fieldset>
    <fieldset class="fieldset">
      <%= f.label :current_password, class: "label" %> <i>(we need your current password to confirm your changes)</i>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "input" %>
    </fieldset>
    <div class="flex gap-2">
      <%= link_to "Back", :back, class: "btn btn-secondary" %>
      <%= f.submit "Update", class: "btn btn-primary" %>
    </div>
  <% end %>
  <!--<h3>Cancel my account</h3>-->
  <!--<div>Unhappy? <%#= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>-->
</div>