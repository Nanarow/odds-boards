<div class="card" id="<%= dom_id board %>">
  <div class="card-body flex-row items-center gap-6 border-b border-base-300">
    <!--<aside class="flex flex-col items-center">-->
    <%#= render_icon 'chevron-up', class: 'size-10 stroke-1' %>
    <!--      <span class="text-2xl"><%#= board.vote_count %></span>
    </aside>-->
    <section class="flex flex-col gap-2">
      <div class='flex gap-2 items-center'>
        <%= render 'components/ui/avatar', avatar: board.author.avatar %>
        @<%= board.author.username %>
        &CenterDot;
        <%= time_ago_in_words(board.last_activity_at) %> ago
        <span class="badge badge-soft"><%= board.category.name %></span>
      </div>
      <h2>
        <%= board.title %>
      </h2>
      <p>
        <%= board.body %>
      </p>
      <%= render 'tags/tags', tags: board.tags %>
      <div class="flex gap-2 items-center">
        <%= render_icon 'upvote', class: 'size-4' %>
        <%= board.vote_count %> upvotes
        <%= render_icon 'comment', class: 'size-4' %>
        <%= board.comments.count %> comments
      </div>
    </section>
  </div>
  <!--<h3 class="px-4">Comments</h3>-->
  <%#= render 'comments/comments', comments: board.comments_by_depth(0) %>
</div>
