<%= turbo_stream.remove "board-#{@board.id}" %>
<%= turbo_stream.update "categories" do %>
  <%= render @categories %>
<% end %>
<%= turbo_stream.update "tags" do %>
  <%= render 'tags/list', tags: @tags %>
<% end %>
<%= turbo_stream.replace "board-delete-dialog" do %>
  <dialog id="board-delete-dialog"></dialog>
<% end %>
<%= turbo_stream.update "notification" do %>
  <%= render 'shared/notification' %>
<% end %>