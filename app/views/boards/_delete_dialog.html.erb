<%# locals: (board:) %>
<dialog class="modal" id="board-delete-dialog" open>
  <div class="modal-box">
    <h3 class="text-lg font-bold">Are you sure you want to delete this board?</h3>
    <p class="py-4">This action cannot be undone</p>
    <div class="modal-action">
      <form method="dialog">
        <button class="btn">No, Cancel</button>
      </form>
      <%= button_to 'Yes, Delete', board_path(board), method: :delete, 
        class: 'btn btn-error', 
        data: { 
          turbo: true, 
          testid: "delete-board-#{board.id}-button",
        } %>
    </div>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>
