<div class="card">
  <div class="card-body">
    <div class="flex gap-1">
      <%= render_icon 'tags', class: 'size-6' %>
      <h4 class="card-title">Tags</h4>
    </div>
    <div class="flex flex-wrap gap-1">
      <% @tags.each do |tag| %>
        <%= render tag, with_icon: false %>
      <% end %>
    </div>
  </div>
</div>